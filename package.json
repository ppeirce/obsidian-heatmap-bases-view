{
	"name": "obsidian-heatmap-bases-view",
	"version": "1.0.5",
	"description": "A GitHub-contributions-style heatmap view for Bases",
	"main": "main.js",
	"type": "module",
	"scripts": {
		"dev": "node esbuild.config.mjs",
		"build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
		"version": "node version-bump.mjs && git add manifest.json versions.json",
		"lint": "eslint src",
		"lint:fix": "eslint src --fix",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"prepare": "husky"
	},
	"lint-staged": {
		"*.ts": "eslint --fix"
	},
	"keywords": [
		"obsidian",
		"obsidian-plugin",
		"bases",
		"heatmap"
	],
	"author": "",
	"license": "MIT",
	"devDependencies": {
		"@eslint/js": "^9.39.1",
		"@types/node": "^20.19.27",
		"@typescript-eslint/eslint-plugin": "^8.49.0",
		"@typescript-eslint/parser": "^8.49.0",
		"@vitest/coverage-v8": "^3.2.4",
		"builtin-modules": "3.3.0",
		"esbuild": "0.17.3",
		"eslint": "^9.39.1",
		"globals": "^16.5.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"obsidian": "latest",
		"tslib": "2.4.0",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.49.0",
		"vitest": "^3.2.4"
	}
}
